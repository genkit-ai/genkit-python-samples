set -euo pipefail

# Get the directory of the script (bin/)
BIN_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# Root directory is up one level from bin/
ROOT_DIR="$(cd "${BIN_DIR}/.." && pwd)"

echo "--- üîç Running Ruff Check ---"
uv run --directory "${ROOT_DIR}" ruff check --fix --preview --unsafe-fixes .

echo "--- üîç Running Ruff Format ---"
uv run --directory "${ROOT_DIR}" ruff format --preview .

# Ensure Python test files follow the *_test.py naming convention.
if find "${ROOT_DIR}" -name "test_*.py" -not -path "*/.*" -not -path "*/node_modules/*" -not -path "*/.venv/*" | grep -q .; then
  echo "Error: Found Python test files starting with 'test_'. Please use the '*_test.py' format instead:"
  find "${ROOT_DIR}" -name "test_*.py" -not -path "*/.*" -not -path "*/node_modules/*" -not -path "*/.venv/*"
  exit 1
fi

# Fast type checkers first (blocking)
echo "--- üîç Running Ty Type Check ---"
uv run --directory "${ROOT_DIR}" ty check .

# Pyrefly checks the full workspace
echo "--- üîç Running Pyrefly Type Check ---"
uv run --directory "${ROOT_DIR}" pyrefly check .

# Pyright runs on the workspace (configured in pyproject.toml)
echo "--- üîç Running Pyright Type Check ---"
uv run --directory "${ROOT_DIR}" pyright .

echo "--- üêç Running Python Security Checks ---"
"${BIN_DIR}/run_python_security_checks"

# License checks
echo "--- üìú Running License Check ---"
"${BIN_DIR}/check_license"

# Consistency checks
echo "--- üîç Running Consistency Checks ---"
"${BIN_DIR}/check_consistency"
