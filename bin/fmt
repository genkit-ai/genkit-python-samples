# Format all files in the project

set -euo pipefail

if ((EUID == 0)); then
  echo "Please do not run as root"
  exit
fi

# Get the directory of the script (bin/)
BIN_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# Root directory is up one level from bin/
ROOT_DIR="$(cd "${BIN_DIR}/.." && pwd)"

# Add license header to all files that don't already have it.
"${BIN_DIR}/add_license"

# Format all TOML files.
"${BIN_DIR}/format_toml_files"
if [[ $? -ne 0 ]]; then
  exit 1
fi

# Format all Python code while organizing imports.
echo "Running Ruff check & format..."
uv run --directory "${ROOT_DIR}" ruff check --select I --fix --preview --unsafe-fixes .
uv run --directory "${ROOT_DIR}" ruff format --preview .
if [[ $? -ne 0 ]]; then
  exit 1
fi

# Format all JS/TS/JSON code with Biome.
echo "Running Biome format..."
pnpm dlx @biomejs/biome check --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=true --fix .
if [[ $? -ne 0 ]]; then
 echo "Biome formatting failed"
 exit 1
fi
